<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body class="image-fluid"
    style="background-repeat: no-repeat; background-attachment: fixed; background-position: center; background-size: cover; background-image: url(https://images.unsplash.com/photo-1508717146309-25a0019d0381?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1951&q=80);">
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
        <ul class="cart__item-list">
            <% products.forEach(p => { %>
            <li class="cart__item">
           
                <form action="/cart-delete-item" method="POST">
                    <button class="btn btn info" type="submit">Email</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <button class="btn btn danger" type="submit">Remove</button>
                </form>
            </li>
            <% }) %>
        </ul>
        <hr>
        <% } else { %>
        <h1>No Favourite Profiles</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>